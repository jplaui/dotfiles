### my configs

# keyboard backlight
bindsym $mod+Control+Up exec /usr/local/bin/kb-light.py + 1
bindsym $mod+Control+Down exec /usr/local/bin/kb-light.py - 1

# Volume Up/Down
bindsym XF86AudioRaiseVolume exec "amixer -q set 'Master' 10%+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -q set 'Master' 10%- unmute"
bindsym XF86AudioMute exec "amixer -q set 'Master' toggle"

# lock screen
bindsym $mod+Delete exec --no-startup-id "i3lock -i ~/Pictures/testlock.png"

# lock screen and suspend
bindsym $mod+End exec --no-startup-id "i3lock -i ~/Pictures/arch4k.png && systemctl suspend"

# lock and hibernate
bindsym $mod+Insert exec --no-startup-id "i3lock -i ~/Pictures/arch4k.png && systemctl hibernate"

# start/stop desktop setup my uni room
# bindsym $mod+Shift+n exec /home/jp/script/screenup.sh
# xrandr reset view
bindsym $mod+Shift+m exec xrandr --output HDMI2 --off --output HDMI1 --off --output VIRTUAL1 --off --output DP1 --off --output DP1-1 --off --output DP1-2 --off --output DP1-3 --off --output DP2 --off --output DP2-1 --off --output DP2-2 --off --output DP2-3 --off
# xrandr 4k monitors twice
bindsym $mod+Shift+n exec xrandr --fb 10240x2160 --verbose --output DP1-2 --mode 3840x2160 --rate 30 --pos 0x0 --crtc 0 --output DP1-3 --mode 3840x2160 --rate 30 --right-of DP1-2 --crtc 1 --output eDP1 --auto --right-of DP1-3 --primary --crtc 2 --output HDMI1 --off --output HDMI2 --off --output VIRTUAL1 --off --output DP2 --off

